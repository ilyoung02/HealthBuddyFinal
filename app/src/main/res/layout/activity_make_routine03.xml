<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back Button (Arrow) -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/icon_back"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="루틴을 수행하실 요일을\n선택해 주세요"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:contentDescription="요일 이미지 묶음">

            <ImageButton
                android:id="@+id/mon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_mon"
                android:background="#ffffff"
                android:contentDescription="요일"/>

            <ImageButton
                android:id="@+id/tue"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_tue"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/wed"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_wed"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/thu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_thu"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/fri"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_fri"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/sat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_sat"
                android:background="#ffffff" />

            <ImageButton
                android:id="@+id/sun"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_sun"
                android:background="#ffffff" />

        </LinearLayout>


    </LinearLayout>

    <!-- Next Step Button -->
    <Button
        android:id="@+id/nextBtn03"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="다음 단계"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/rounded_button"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:layout_gravity="center" />

</LinearLayout>
