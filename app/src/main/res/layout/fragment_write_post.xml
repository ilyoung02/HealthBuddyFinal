<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 제목 입력 -->
        <EditText
            android:id="@+id/editTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:hint="제목을 입력하세요"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 주제 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- 운동 아이콘 -->
            <ImageView
                android:id="@+id/icon_exercise"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fitness"
                android:contentDescription="운동 아이콘"
                android:layout_marginEnd="8dp" />

            <!-- 주제 선택 스피너 -->
            <Spinner
                android:id="@+id/spinner_topic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_spinner"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 위치 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- 지역 아이콘 -->
            <ImageView
                android:id="@+id/icon_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gps"
                android:contentDescription="위치 아이콘"
                android:layout_marginEnd="8dp" />

            <!-- 위치 선택 스피너 -->
            <Spinner
                android:id="@+id/spinner_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_spinner"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 성별 카테고리 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- 성별 아이콘 -->
            <ImageView
                android:id="@+id/icon_category"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/matching"
                android:contentDescription="성별 아이콘"
                android:layout_marginEnd="8dp" />

            <!-- 성별 카테고리 선택 스피너 -->
            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_spinner"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 내용 입력 -->
        <EditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="내용을 입력하세요"
            android:background="@drawable/rounded_input_field"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_marginBottom="100dp" />

        <!-- 게시하기 버튼 -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="게시하기"
            android:background="@drawable/rounded_chatbutton"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
